<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/iniciarIntentService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="iniciarIntentService"
        android:text="Iniciar Intent Service" />

    <Button
        android:id="@+id/pararIntentService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Parar Intent Service"
        android:onClick="pararIntentService" />

    <Button
        android:id="@+id/iniciarService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Iniciar Service"
        android:onClick="iniciarService"/>
</LinearLayout>

